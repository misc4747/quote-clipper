{
  "name": "Quote Clipper",
  "description": "選択テキストの各行の始めに\"> \"をつけて、クリップボードにコピーします。",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": ["activeTab","scripting","contextMenus", "clipboardWrite"],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "48": "img/icon48.png"
  },
  "commands": {
    "quote-clipper": {
      "suggested_key": {
         "default": "Ctrl+Q",
          "mac": "Command+Q"
      },
      "description": "Quote Clipper"
    }
  },
  "content_scripts": [
      {
         "matches": [
            "<all_urls>"
         ],
         "js": ["js/content.js"]
      }
   ]
}
